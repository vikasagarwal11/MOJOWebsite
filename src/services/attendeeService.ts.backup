      // Clear user's position
      transaction.update(attendeeRef, {
        waitlistPosition: null,
        updatedAt: new Date()
      });
      
      // üîí ATOMIC: Get remaining waitlisted attendees
      const waitlistQuery = query(
        collection(db, 'events', eventId, 'attendees'),
